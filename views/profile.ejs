<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white">
    <div class="w-full min-h-screen p-10 relative">
        
        <!-- Logout Button -->
        <a href="/logout"
            class="absolute top-5 right-5 px-4 py-2 rounded-md bg-red-600 hover:bg-red-700 transition-all duration-300">
            Logout
        </a>

        <!-- Posts Button -->
        <a href="/posts"
    class="absolute top-20 right-5 px-4 py-2 rounded-md bg-green-800 hover:bg-gray-700 text-white transition-all duration-300">
    Posts
</a>


        <!-- Welcome Message -->
        <h3 class="text-3xl mb-4">Hello <%= user.username %></h3>

        <!-- Post Form -->
        <form action="/post" method="post">
            <textarea
                placeholder="What's on your mind?"
                class="block mb-3 p-3 w-full sm:w-3/4 lg:w-1/2 resize-none bg-transparent border-2 border-zinc-800 rounded-md min-h-[6rem] max-h-[15rem] overflow-auto"
                name="content"
                oninput="this.style.height = 'auto'; this.style.height = this.scrollHeight + 'px';"
            ></textarea>
            <input
                type="submit" value="Post Banger"
                class="px-4 py-3 mt-2 rounded-md bg-blue-600 hover:bg-green-700 hover:scale-105 transition-all duration-300 cursor-pointer">
        </form>

        <!-- User's Posts Section -->
        <div class="mt-20">
            <h3 class="text-3xl mb-3">Your Posts</h3>
            <div class="post-container grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <% user.posts.reverse().forEach((post) => { %>
                    <div class="p-5 border-2 border-zinc-500 rounded-md transform transition-all duration-300 hover:scale-105 hover:shadow-md hover:shadow-zinc-900">
                        <h4 class="text-green-500 mb-2">@<%= user.username %></h4>
                        <p class="tracking-tight break-words">
                            <%= post.content %>
                        </p>
                        <div class="btns flex gap-4 mt-5">
                            <span class="text-red-500">
                                <%= post.likes.length %> Likes
                            </span>
                            <a class="text-yellow-500" href="/edit/<%= post._id %>">Edit</a>
                            <a class="text-red-500" href="/delete/<%= post._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>

</html>
