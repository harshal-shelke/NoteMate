<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white">
    <div class="w-full min-h-screen p-10 relative">
        
        <!-- Header Navigation Links (Updated) -->
        <div class="absolute top-5 right-5 flex space-x-6 items-center text-2xl font-semibold text-white ml-auto">
            <!-- Home Link -->
            <a href="/posts"
                class="text-gray-300 hover:text-white transition duration-300">
                Home
            </a>
            
            <!-- Profile Link -->
            <a href="/profile" 
                class="text-blue-300 hover:text-white transition duration-300">
                @<%= user.username %>
            </a>
        
            <!-- Smaller Logout Button -->
            <a href="/logout"
                class="px-3 py-1 rounded-md bg-red-600 hover:bg-red-700 transition-all duration-300 text-white text-base">
                Logout
            </a>
        </div>

        <!-- Welcome Message -->
        <h3 class="text-3xl mb-4">Hello <%= user.username %></h3>

        <!-- User's Posts Section -->
        <div class="mt-20">
            <h3 class="text-3xl mb-3">Your Posts</h3>
            <div class="post-container grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <% user.posts.forEach((post) => { %>
                    <div class="p-5 border-2 border-zinc-500 rounded-md transform transition-all duration-300 hover:scale-105 hover:shadow-md hover:shadow-zinc-900">
                        <h4 class="text-green-500 mb-2">@<%= user.username %></h4>
                        <p class="tracking-tight break-words">
                            <%= post.content %>
                        </p>
                        <div class="btns flex gap-4 mt-5">
                            <span class="text-red-500">
                                <%= post.likes.length %> Likes
                            </span>
                            <a class="text-yellow-500" href="/edit/<%= post._id %>">Edit</a>
                            <a class="text-red-500" href="/delete/<%= post._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>

</html>
